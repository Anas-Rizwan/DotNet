@model Airline_Reservation_System.Models.Admin
@{ Layout = null; }
@{
    ViewBag.Title = "Admin";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Hello, world!</title>
</head>
<body>

    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: black
        }

        .card_div {
            border: 2px solid #7CFC00 !important;
            border-radius: 20px;
            margin: 60px 20px 10px;
        }

        .card_body_div {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 18rem;
            height: 15rem;
            color: #7CFC00;
        }

        .card-title {
            font-size: 20px;
            color: #32CD32;
        }

        .button_btn_div {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .button_btn {
            width: 60%;
            margin-bottom: 20px;
            background-color: white;
            color: #32CD32;
            font-weight: 700;
            border: 2px solid #7CFC00;
            border-radius: 20px;
        }

            .button_btn:hover {
                border: 2px solid WHITE !important;
                background-color: #32CD32 !important;
                color: white
            }
       
    </style>




    <nav class="navbar navbar-expand-lg  ">
        <div class="container-fluid ">
            <a class="navbar-brand" href="#">Navbar</a>
            <button  class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i style="color:white" class="fa-solid fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h2 style="color:aliceblue">Admin</h2>
        <div style="display:flex; flex-direction:row; flex-wrap:wrap; justify-content:center;">

            <div class="card card_div">
                <div class="card-body card_body_div ">
                    <h5 class="card-title"> Shedule Flights</h5>
                </div>
                <div class="button_btn_div">
                    <a href="/Admin/Shedule" class="btn btn-primary button_btn ">Shedule</a>
                </div>

            </div>

            <div class="card card_div">
                <div class="card-body card_body_div ">
                    <h5 class="card-title">Flights Details</h5>
                </div>
                <div class="button_btn_div">
                    <a href="#" class="btn btn-primary button_btn ">Details</a>
                </div>

            </div>

            <div class="card card_div">
                <div class="card-body card_body_div ">
                    <h5 class="card-title">Registered Users</h5>
                </div>
                <div class="button_btn_div">
                    <a href="/Admin/register_user" class="btn btn-primary button_btn ">Users</a>
                </div>

            </div>

            <div class="card card_div">
                <div class="card-body card_body_div ">
                    <h5 class="card-title">Passengers List</h5>
                </div>
                <div class="button_btn_div">
                    <a href="#" class="btn btn-primary button_btn ">Passengers</a>
                </div>

            </div>
        </div>

    </div>
    <div style=" display:flex;
            justify-content:center; margin-top:15px " >
     
        <p style="color:#32CD32"> @DateTime.Now.Year - Copywrite &copy; Airline Reservation System</p>
      
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>